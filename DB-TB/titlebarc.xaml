<UserControl x:Class="DB_TB.titlebarc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DB_TB"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="800">
    <Grid>
        <Rectangle x:Name="titlebar" Fill="#FF202225" HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="800" MouseUp="Title_MouseUp" MouseMove="Titlebar_MouseMove" MouseDown="Titlebar_MouseDown"/>
        <Image x:Name="closebutton" Margin="778,0,0,0" Source="Resources/close.png" MouseEnter="Closebutton_MouseEnter" MouseLeave="Closebutton_MouseLeave" MouseLeftButtonDown="Closebutton_MouseLeftButtonDown"/>
        <Image x:Name="minimize" HorizontalAlignment="Left" Height="22" Margin="751,0,0,0" VerticalAlignment="Top" Width="22" Source="Resources/minimze.png" MouseLeftButtonDown="Minimize_MouseLeftButtonDown"/>
        <Image HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="75" Source="Resources/discord.png" Margin="4,2,0,0"/>
    </Grid>
</UserControl>
